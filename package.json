{
  "private": true,
  "name": "i18n-framework-template",
  "version": "0.0.2",
  "description": "一个国际化的react项目框架",
  "author": "XueYou",
  "license": "ISC",
  "packageManager": "pnpm@9.0.0",
  "scripts": {
    "format": "prettier --write \"**/*.{js,ts,tsx,md,css,scss}\"",
    "postinstall": "turbo run stub",
    "lint:eslint": "eslint .",
    "lint:stylelint": "stylelint ./**/*.{scss,css,less,sass}",
    "lint": "npm run lint:eslint && npm run lint:stylelint",
    "dev:i18n-fe-shop-express": "turbo run dev --filter=@app/i18n-fe-shop-express",
    "dev": "turbo run dev"
  },
  "files": [
    "lib",
    "package.json",
    "tsconfig.json",
    "README.md"
  ],
  "keywords": [
    "TurboRepo",
    "TypeScript"
  ],
  "branchlint": {
    "allowed": [
      "master",
      "test",
      "next",
      "preonline"
    ],
    "disallowed": [],
    "prefixes": [
      "feature",
      "hotfix",
      "private"
    ],
    "separator": [
      "/"
    ],
    "msgBranchDisallowed": "Please make sure your branch splitter is '/' and it starts with feature, hotfix, or private"
  },
  "lint-staged": {
    "*.{js,mjs,jsx,ts,tsx}": [
      "eslint --fix --max-warnings 0"
    ],
    "*.{scss,css,less,sass}": [
      "stylelint --fix --max-warnings 0",
      "prettier --write"
    ],
    "*.json": [
      "prettier --write"
    ]
  },
  "commitlint": {
    "extends": "./commitlint.config.mjs"
  },
  "eslintConfig": {
    "extends": "./eslint.config.mjs"
  },
  "stylelint": {
    "extends": "./stylelint.config.mjs"
  },
  "engines": {
    "node": ">=18.17.0",
    "npm": ">=9.6.7"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.5.0",
    "@commitlint/config-conventional": "^19.5.0",
    "@framework/lint-set": "workspace:^",
    "branchlint": "^0.0.2",
    "env-cmd": "^10.1.0",
    "husky": "^9.1.6",
    "lint-staged": "^15.2.10",
    "postcss": "^8.4.47",
    "postcss-scss": "^4.0.9",
    "stylelint": "^16.9.0",
    "stylelint-config-rational-order": "^0.1.2",
    "stylelint-config-standard-scss": "^13.1.0",
    "stylelint-prettier": "^5.0.2",
    "turbo": "^2.1.2"
  }
}
